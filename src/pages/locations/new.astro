---
import { actions } from "astro:actions";
import Layout from "../../layouts/Layout.astro";

const { user } = Astro.locals;

// This page is protected. Redirect to sign-in if the user is not logged in.
if (!user) {
    return Astro.redirect(`/signin?redirect=${Astro.url.pathname}`);
}

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const result = await Astro.callAction(actions.locations.create, {
        name: formData.get("name") as string,
        content: formData.get("content") as string,
        description: (formData.get("description") as string) || undefined,
        contact_phone: (formData.get("contact_phone") as string) || undefined,
        contact_email: (formData.get("contact_email") as string) || undefined,
        contact_website:
            (formData.get("contact_website") as string) || undefined,
        latitude: (formData.get("latitude") as string) || undefined,
        longitude: (formData.get("longitude") as string) || undefined,
        isPublicLand: (formData.get("isPublicLand") as string) || undefined,
    });
    if (result?.data?.success) {
        return Astro.redirect(`/locations/${result.data.slug}`);
    }
}
---

<Layout title="Add New Location - California Ducks">
    <main class="mx-auto p-4 w-200 max-w-full text-neutral-200">
        <div class="mb-8">
            <a href="/locations" class="link-accent">&larr; Back to Locations</a
            >
        </div>

        <h1
            class="text-4xl font-bold leading-tight mb-6 font-serif text-neutral-100"
        >
            Add a New Location
        </h1>

        <div class="section-container">
            <form method="POST" id="location-form" class="space-y-6">
                <div>
                    <label for="name" class="form-label">Location Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="input-field"
                        placeholder="e.g., Grizzly Island Wildlife Area"
                    />
                </div>

                <div>
                    <label for="description" class="form-label"
                        >Short Description</label
                    >
                    <textarea
                        id="description"
                        name="description"
                        rows="2"
                        class="textarea-field font-sans"
                        placeholder="A brief summary of the location."
                    ></textarea>
                </div>

                <div>
                    <label for="content" class="form-label"
                        >Details (Markdown supported)</label
                    >
                    <textarea
                        id="content"
                        name="content"
                        rows="10"
                        required
                        class="textarea-field font-sans"
                        placeholder="Provide detailed information about the location. You can use Markdown for formatting."
                    ></textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="contact_phone" class="form-label"
                            >Contact Phone</label
                        >
                        <input
                            type="tel"
                            id="contact_phone"
                            name="contact_phone"
                            class="input-field"
                            placeholder="(555) 123-4567"
                        />
                    </div>
                    <div>
                        <label for="contact_email" class="form-label"
                            >Contact Email</label
                        >
                        <input
                            type="email"
                            id="contact_email"
                            name="contact_email"
                            class="input-field"
                            placeholder="contact@example.com"
                        />
                    </div>
                </div>

                <div>
                    <label for="contact_website" class="form-label"
                        >Website</label
                    >
                    <input
                        type="url"
                        id="contact_website"
                        name="contact_website"
                        class="input-field"
                        placeholder="https://example.com"
                    />
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="latitude" class="form-label">Latitude</label
                        >
                        <input
                            type="number"
                            id="latitude"
                            name="latitude"
                            step="any"
                            min="-90"
                            max="90"
                            class="input-field"
                            placeholder="e.g., 38.1234"
                        />
                    </div>
                    <div>
                        <label for="longitude" class="form-label"
                            >Longitude</label
                        >
                        <input
                            type="number"
                            id="longitude"
                            name="longitude"
                            step="any"
                            min="-180"
                            max="180"
                            class="input-field"
                            placeholder="e.g., -121.5678"
                        />
                    </div>
                </div>
                <p class="text-sm text-neutral-400 -mt-4">
                    Tip: Find coordinates on Google Maps by right-clicking a
                    location.
                </p>

                <div>
                    <label for="isPublicLand" class="form-label"
                        >Land Access</label
                    >
                    <select
                        id="isPublicLand"
                        name="isPublicLand"
                        class="input-field"
                    >
                        <option value="" selected>Unknown</option>
                        <option value="true">Public Land</option>
                        <option value="false">Private Land</option>
                    </select>
                    <p class="text-sm text-neutral-400 mt-1">
                        Indicates whether the land is publicly accessible or
                        privately owned.
                    </p>
                </div>

                <div id="error-message" class="hidden text-red-400 text-sm">
                </div>

                <div>
                    <button
                        type="submit"
                        id="submit-btn"
                        class="w-full md:w-auto btn-primary"
                    >
                        Save Location
                    </button>
                </div>
            </form>
        </div>
    </main>
</Layout>

<script>
    document.addEventListener("astro:after-swap", (e) => {
        const form = document.getElementById(
            "location-form",
        ) as HTMLFormElement;
        const submitBtn = document.getElementById(
            "submit-btn",
        ) as HTMLButtonElement;
        const errorMessage = document.getElementById(
            "error-message",
        ) as HTMLDivElement;

        if (!form) return;

        form.addEventListener("submit", () => {
            errorMessage.classList.add("hidden");
            submitBtn.disabled = true;
            submitBtn.textContent = "Saving...";
        });
    });
</script>
