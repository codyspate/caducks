---
import { drizzle } from "drizzle-orm/d1";
import { nanoid } from "nanoid";
import * as schema from "../../db/schema";
import Layout from "../../layouts/Layout.astro";

const {
    user,
    runtime: { env },
} = Astro.locals;

// This page is protected. Redirect to sign-in if the user is not logged in.
if (!user) {
    return Astro.redirect(`/signin?redirect=${Astro.url.pathname}`);
}

const db = drizzle(env.DB, { schema });

// Simple slugify function
const slugify = (text: string) => {
    return text
        .toString()
        .toLowerCase()
        .replace(/\s+/g, "-") // Replace spaces with -
        .replace(/[^\w-]+/g, "") // Remove all non-word chars
        .replace(/--+/g, "-") // Replace multiple - with single -
        .replace(/^-+/, "") // Trim - from start of text
        .replace(/-+$/, ""); // Trim - from end of text
};

if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const name = formData.get("name") as string;
        const description = formData.get("description") as string;
        const content = formData.get("content") as string;
        const contact_phone = formData.get("contact_phone") as string;
        const contact_email = formData.get("contact_email") as string;
        const contact_website = formData.get("contact_website") as string;
        const latitudeStr = formData.get("latitude") as string;
        const longitudeStr = formData.get("longitude") as string;
        const latitude = latitudeStr ? parseFloat(latitudeStr) : null;
        const longitude = longitudeStr ? parseFloat(longitudeStr) : null;

        if (!name || !content) {
            // Basic validation
            throw new Error("Name and content are required.");
        }

        const slug = `${slugify(name)}-${nanoid(4)}`;
        const now = new Date();
        const id = nanoid();

        console.log("Creating location:", { id, name, slug, userId: user.id });

        const result = await db.insert(schema.locations).values({
            id,
            name,
            slug,
            description,
            content,
            contact_phone,
            contact_email,
            contact_website,
            latitude,
            longitude,
            userId: user.id, // Associate the location with the logged-in user
            createdAt: now,
            updatedAt: now,
            verified_count: 0,
        });

        console.log("Insert result:", result);

        return Astro.redirect(`/locations/${slug}`);
    } catch (error) {
        console.error("Failed to create location:", error);
        // In a real app, you'd want to show an error message to the user
    }
}
---

<Layout title="Add New Location - California Ducks">
    <main class="mx-auto p-4 w-200 max-w-full text-neutral-200">
        <div class="mb-8">
            <a href="/locations" class="link-accent">&larr; Back to Locations</a
            >
        </div>

        <h1
            class="text-4xl font-bold leading-tight mb-6 font-serif text-neutral-100"
        >
            Add a New Location
        </h1>

        <div class="section-container">
            <form method="POST" class="space-y-6">
                <div>
                    <label for="name" class="form-label">Location Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="input-field"
                        placeholder="e.g., Grizzly Island Wildlife Area"
                    />
                </div>

                <div>
                    <label for="description" class="form-label"
                        >Short Description</label
                    >
                    <textarea
                        id="description"
                        name="description"
                        rows="2"
                        class="textarea-field font-sans"
                        placeholder="A brief summary of the location."
                    ></textarea>
                </div>

                <div>
                    <label for="content" class="form-label"
                        >Details (Markdown supported)</label
                    >
                    <textarea
                        id="content"
                        name="content"
                        rows="10"
                        required
                        class="textarea-field font-sans"
                        placeholder="Provide detailed information about the location. You can use Markdown for formatting."
                    ></textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="contact_phone" class="form-label"
                            >Contact Phone</label
                        >
                        <input
                            type="tel"
                            id="contact_phone"
                            name="contact_phone"
                            class="input-field"
                            placeholder="(555) 123-4567"
                        />
                    </div>
                    <div>
                        <label for="contact_email" class="form-label"
                            >Contact Email</label
                        >
                        <input
                            type="email"
                            id="contact_email"
                            name="contact_email"
                            class="input-field"
                            placeholder="contact@example.com"
                        />
                    </div>
                </div>

                <div>
                    <label for="contact_website" class="form-label"
                        >Website</label
                    >
                    <input
                        type="url"
                        id="contact_website"
                        name="contact_website"
                        class="input-field"
                        placeholder="https://example.com"
                    />
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="latitude" class="form-label">Latitude</label
                        >
                        <input
                            type="number"
                            id="latitude"
                            name="latitude"
                            step="any"
                            min="-90"
                            max="90"
                            class="input-field"
                            placeholder="e.g., 38.1234"
                        />
                    </div>
                    <div>
                        <label for="longitude" class="form-label"
                            >Longitude</label
                        >
                        <input
                            type="number"
                            id="longitude"
                            name="longitude"
                            step="any"
                            min="-180"
                            max="180"
                            class="input-field"
                            placeholder="e.g., -121.5678"
                        />
                    </div>
                </div>
                <p class="text-sm text-neutral-400 -mt-4">
                    Tip: Find coordinates on Google Maps by right-clicking a
                    location.
                </p>

                <div>
                    <button type="submit" class="w-full md:w-auto btn-primary">
                        Save Location
                    </button>
                </div>
            </form>
        </div>
    </main>
</Layout>
