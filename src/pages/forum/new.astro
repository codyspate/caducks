---
import { drizzle } from "drizzle-orm/d1";
import { nanoid } from "nanoid";
import * as schema from "../../db/schema";
import Layout from "../../layouts/Layout.astro";

const {
    user,
    runtime: { env },
} = Astro.locals;

if (!user) {
    return Astro.redirect(`/signin?redirect=${Astro.url.pathname}`);
}

const db = drizzle(env.DB, { schema });

const slugify = (text: string) => {
    return text
        .toString()
        .toLowerCase()
        .replace(/\s+/g, "-")
        .replace(/[^\w-]+/g, "")
        .replace(/--+/g, "-")
        .replace(/^-+/, "")
        .replace(/-+$/, "");
};

if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const title = formData.get("title") as string;
        const content = formData.get("content") as string;

        if (!title || !content) {
            throw new Error("Title and content are required.");
        }

        const slug = `${slugify(title)}-${nanoid(4)}`;
        const now = new Date();

        await db.insert(schema.forum_topics).values({
            id: nanoid(),
            title,
            slug,
            content,
            userId: user.id,
            createdAt: now,
            updatedAt: now,
        });

        return Astro.redirect(`/forum/${slug}`);
    } catch (error) {
        console.error("Failed to create topic:", error);
    }
}
---

<Layout title="Start a New Discussion - California Ducks">
    <main class="mx-auto p-4 w-200 max-w-full text-neutral-200">
        <div class="mb-8">
            <a href="/forum" class="link-accent">&larr; Back to Forum</a>
        </div>

        <h1
            class="text-4xl font-bold leading-tight mb-6 font-serif text-neutral-100"
        >
            Start a New Discussion
        </h1>

        <div class="section-container">
            <form method="POST" class="space-y-6">
                <div>
                    <label for="title" class="form-label"
                        >Discussion Title</label
                    >
                    <input
                        type="text"
                        id="title"
                        name="title"
                        required
                        minlength="5"
                        class="input-field"
                        placeholder="e.g., Best decoys for late season?"
                    />
                </div>
                <div>
                    <label for="content" class="form-label">Your Message</label>
                    <textarea
                        id="content"
                        name="content"
                        rows="8"
                        required
                        minlength="10"
                        class="textarea-field font-sans"
                        placeholder="Share your thoughts, tips, or questions..."
                    ></textarea>
                </div>
                <div>
                    <button type="submit" class="w-full md:w-auto btn-primary">
                        Post Discussion
                    </button>
                </div>
            </form>
        </div>
    </main>
</Layout>
