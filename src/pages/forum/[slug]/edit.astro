---
import { actions } from "astro:actions";
import { eq } from "drizzle-orm";
import { drizzle } from "drizzle-orm/d1";
import * as schema from "../../../db/schema";
import Layout from "../../../layouts/Layout.astro";
import { getTopicBySlug } from "../../../lib/data";

const { slug } = Astro.params;
const {
    user,
    runtime: { env },
} = Astro.locals;

if (!user) {
    return Astro.redirect(`/signin?redirect=${Astro.url.pathname}`);
}

if (!slug) {
    return Astro.redirect("/404");
}

const db = drizzle(env.DB, { schema });
const topic = await getTopicBySlug(db, slug);

if (!topic) {
    return Astro.redirect("/404");
}

// Check ownership
if (topic.userId !== user.id) {
    return Astro.redirect(`/forum/${slug}`);
}

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const intent = formData.get("intent");

    if (intent === "delete-topic") {
        const result = await Astro.callAction(actions.forum.deleteTopic, {
            topicId: formData.get("topicId") as string,
        });
        if (result.data?.success) {
            return Astro.redirect("/forum");
        }
    } else {
        const result = await Astro.callAction(actions.forum.updateTopic, {
            topicId: formData.get("topicId") as string,
            title: formData.get("title") as string,
            content: formData.get("content") as string,
        });
        if (result.data?.success) {
            return Astro.redirect(`/forum/${slug}`);
        }
    }
}
---

<Layout title={`Edit: ${topic.title} - California Ducks Forum`}>
    <main class="mx-auto p-4 w-200 max-w-full text-neutral-200">
        <div class="mb-8">
            <a href={`/forum/${slug}`} class="link-accent"
                >&larr; Back to Topic</a
            >
        </div>

        <h1
            class="text-4xl font-bold leading-tight mb-6 font-serif text-neutral-100"
        >
            Edit Discussion
        </h1>

        <div class="section-container">
            <form id="update-form" method="POST" class="space-y-6">
                <input type="hidden" name="topicId" value={topic.id} />
                <div>
                    <label for="title" class="form-label"
                        >Discussion Title</label
                    >
                    <input
                        type="text"
                        id="title"
                        name="title"
                        required
                        minlength="5"
                        value={topic.title}
                        class="input-field"
                    />
                </div>
                <div>
                    <label for="content" class="form-label">Your Message</label>
                    <textarea
                        id="content"
                        name="content"
                        rows="8"
                        required
                        minlength="10"
                        class="textarea-field font-sans"
                        set:text={topic.content}
                    />
                </div>
                <div class="flex gap-4">
                    <button type="submit" id="update-btn" class="btn-primary">
                        Save Changes
                    </button>
                    <a href={`/forum/${slug}`} class="btn-secondary">
                        Cancel
                    </a>
                </div>
            </form>

            <div class="mt-8 pt-6 border-t border-neutral-800">
                <h3 class="text-lg font-bold text-red-400 mb-3">Danger Zone</h3>
                <p class="text-sm text-neutral-400 mb-4">
                    Deleting this discussion will also remove all replies. This
                    action cannot be undone.
                </p>
                <form id="delete-form" method="POST">
                    <input type="hidden" name="topicId" value={topic.id} />
                    <input type="hidden" name="intent" value="delete-topic" />
                    <button type="submit" id="delete-btn" class="btn-danger">
                        Delete Discussion
                    </button>
                </form>
            </div>
        </div>
    </main>
</Layout>

<script>
    document.addEventListener("astro:after-swap", () => {
        const deleteForm = document.getElementById("delete-form");
        const deleteBtn = document.getElementById("delete-btn");
        deleteForm?.addEventListener("submit", (e) => {
            if (
                !confirm(
                    "Are you sure you want to delete this discussion? This cannot be undone.",
                )
            ) {
                e.preventDefault();
                return;
            }
            if (deleteBtn) {
                deleteBtn.textContent = "Deleting...";
                (deleteBtn as HTMLButtonElement).disabled = true;
            }
        });

        const updateForm = document.getElementById("update-form");
        const updateBtn = document.getElementById("update-btn");
        updateForm?.addEventListener("submit", () => {
            if (updateBtn) {
                updateBtn.textContent = "Saving...";
                (updateBtn as HTMLButtonElement).disabled = true;
            }
        });
    });
</script>
